@using SKAutoNew.Web.ViewModels.TownViewModels;
@model IList<TownIndexViewModel>;

@{
    int count = 0;
}

<h1 style="color:white">Операции с градове</h1>

<div class="form-group border rounded text-white text-center skl-bg-color mt-5">
    <a class="btn btn-lg btn-block text-white" asp-controller="Town" asp-action="Create">Добави нов град</a>
</div>
<div class="table-responsive">
    @if (Model.Count() == 0)
    {
        <h3 class="text-danger ">В момента няма данни за градове!!!</h3>
    }
    else
    {
        <table class="table text-center">
            <thead>
                <tr>
                    <th class="text-white skl-bg-color border" scope="col">#</th>
                    <th class="text-white skl-bg-color border" scope="col">Име на град</th>
                    <th class="text-white skl-bg-color border" scope="col">Промени/Изтрий</th>>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count(); i++)
                {
                    ++count;
                    <tr class="text-center">
                        <td class="text-white skl-bg-color border align-middle" scope="col">@count</td>
                        <td class="text-white skl-bg-color border align-middle" name="townName" scope="col">@Model[i].TownName</td>
                        <td class="text-white skl-bg-color border align-middle" scope="col">
                            <a class="btn bg-dark border p-1 text-white" asp-controller="Town" asp-action="Update" asp-route-townId="@Model[i].TownId">Промени</a>
                            <a class="btn bg-danger border p-1 text-white" asp-controller="Town" asp-action="Delete" asp-route-townId="@Model[i].TownId">Изтрий</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
