@using SKAutoNew.Web.ViewModels.CartViewModels;
@model List<ItemAllViewModel>;

@{
    int count = 0;
}

<h1 style="color:white">Премахни продукт</h1>

<div class="table-responsive">
    @if (Model.Count == 0)
    {
        <h3 class="text-danger ">В момента няма данни за продукти!!!</h3>
    }
    else
    {
        <table class="table text-center">
            <thead>
                <tr>
                    <th class="text-white skl-bg-color border" scope="col">#</th>
                    <th class="text-white skl-bg-color border" scope="col">Име на част</th>
                    <th class="text-white skl-bg-color border" scope="col">Марка и модел</th>
                    <th class="text-white skl-bg-color border" scope="col">Статус на поръчка</th>
                    <th class="text-white skl-bg-color border" scope="col">Дата на поръчка</th>
                    <th class="text-white skl-bg-color border" scope="col">Заявено количество</th>
                    <th class="text-white skl-bg-color border" scope="col">Цена за брой</th>
                    <th class="text-white skl-bg-color border" scope="col">Получател</th>
                    <th class="text-white skl-bg-color border" scope="col">Изтрий</th>>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count(); i++)
                {
                    ++count;
                    <tr class="text-center">
                        <td class="text-white skl-bg-color border align-middle" scope="col">@count</td>
                        <td class="text-white skl-bg-color border align-middle" id="partName" name="partName" scope="col">@Model[i].PartName</td>
                        <td class="text-white skl-bg-color border align-middle" id="brandAndModelName" name="brandAndModel" scope="col">@Model[i].BrandAndModelName</td>
                        <td class="text-white skl-bg-color border align-middle" id="categoryName" name="orderStatus" scope="col">@Model[i].OrderStatus</td>
                        <td class="text-white skl-bg-color border align-middle" id="manufactoryName" name="orderedAt" scope="col">@Model[i].OrderedAt</td>
                        <td class="text-white skl-bg-color border align-middle" id="quantity" name="orderedQuantity" scope="col">@Model[i].OrderedQuantity</td>
                        <td class="text-white skl-bg-color border align-middle" id="price" name="customerPrice" scope="col">@Model[i].CustomerPrice.ToString("0.00") лв.</td>
                        <td class="text-white skl-bg-color border align-middle" id="price" name="recipientFullName" scope="col">@Model[i].RecipientFullName</td>
                        <td class="text-white skl-bg-color border align-middle" scope="col">
                            <a class="btn bg-danger border p-1 text-white" asp-controller="ShoppingCart" asp-action="Delete" asp-route-itemId="@Model[i].ItemId">Изтрий</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
