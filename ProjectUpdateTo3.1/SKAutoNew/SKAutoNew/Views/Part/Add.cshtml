@using SKAutoNew.Web.ViewModels.PartViewModels;
@model PartAddOutputModel;

@{
    ViewData["Title"] = "Add";
}

<h1 class="text-white text-center">Добави наличност</h1>
<div class="row text-white justify-content-xl-center">
    <div class="col-md-4">
        <form id="account" method="post">
            <hr class="bg-white" />
            <div class="form-group">
                <label>Име на част</label>
                <input class="form-control" id="partName" name="partName" value="@Model.PartName" disabled />
            </div>
            <div class="form-group">
                <label>Марка и модел</label>
                <input class="form-control" id="brandAndModelName" name="brandAndModelName" value="@Model.BrandAndModelName" disabled />
            </div>
            <div class="form-group">
                <label>Категория</label>
                <input class="form-control" id="categoryName" name="categoryName" value="@Model.CategoryName" disabled />
            </div>
            <div class="form-group">
                <label>Производител</label>
                <input class="form-control" id="manufactoryName" name="manufactoryName" value="@Model.ManufactoryName" disabled />
            </div>
            <div class="form-group">
                <label>Количество</label>
                <input class="form-control" id="quantity" name="quantity" type="number" min="1" step="1" />
            </div>
            <div class="form-group">
                <label>Цена</label>
                <input class="form-control" id="price" name="price" type="number" min="0.01" step="0.01" />
            </div>
            <hr class="bg-white" />
            <div class="form-group text-center">
                <button type="submit" class="btn skl-bg-color border">Добави</button>
            </div>
        </form>
    </div>
</div>

