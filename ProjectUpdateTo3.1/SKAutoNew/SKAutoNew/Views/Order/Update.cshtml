@using SKAutoNew.Web.ViewModels.OrderViewModels;
@model UpdateOutPutOrderViewModel;

<h1 class="text-white text-center">Промени статус на поръчка</h1>
<div class="row text-white justify-content-xl-center">
    <div class="col-md-4">
        <form id="account" method="post">
            <hr class="bg-white" />
            <div class="form-group" type="hidden">
                <input class="form-control" name="id" value="@Model.Id" type="hidden" />
            </div>
            <div class="form-group">
                <label>Дата на поръчка</label>
                <input class="form-control" name="issuedOn" value="@Model.IssuedOn.ToString("dd/MM/yyyy hh:mm")" />
            </div>
            <div class="form-group">
                <label>Име на получател</label>
                <input class="form-control" name="recipientName" value="@Model.RecipientName" />
            </div>
            <div class="form-group">
                <label>Избери нов статус</label>
                <select class="form-control"  name="orderStatusName" type="text">
                    <option>@Model.OrderStatusName</option>
                    @for (int i = 0; i < Model.AllOrderStatusesNames.Count(); i++)
                    {
                        <option>@Model.AllOrderStatusesNames[i]</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label>Стойност на поръчката</label>
                <input class="form-control" name="orderTotalPrice" value="@Model.OrderTotalPrice лв." />
            </div>
            <hr class="bg-white" />
            <div class="form-group text-center">
                <button type="submit" class="btn skl-bg-color border">Промени</button>
            </div>
        </form>
    </div>
</div>
