@model SKAuto.Web.Areas.Administration.ViewModels.Dashboard.IndexViewModel
@{
    this.ViewData["Title"] = "Admin dashboard";
}

<h1 style="color:white">Администраторски панел</h1>
<span style="color:white">Settings: @this.Model.SettingsCount</span>

<div class="row text-white justify-content-xl-center">
    <div class="col-md-4">
        <section>
            <form>
                <hr class="bg-white" />
                <div class="form-group border rounded text-white text-center skl-bg-color">
                    <a class="btn btn-lg btn-block text-white" asp-controller="Brand" asp-action="Index">Операции с бранд</a>
                </div>
                <div class="form-group border rounded text-white text-center skl-bg-color">
                    <a class="btn btn-lg btn-block text-white" asp-controller="Model" asp-action="Index">Операции с модел</a>
                </div>
                <div class="form-group border rounded text-white text-center skl-bg-color">
                    <a class="btn btn-lg btn-block text-white" asp-controller="Category" asp-action="Index">Операции с категория</a>
                </div>
                <div class="form-group border rounded text-white text-center skl-bg-color">
                    <a class="btn btn-lg btn-block text-white" asp-controller="Part" asp-action="Index">Операции с част</a>
                </div>
                <div class="form-group border rounded text-white text-center skl-bg-color">
                    <a class="btn btn-lg btn-block text-white" asp-controller="Recipient" asp-action="Index">Операции с получател</a>
                </div>
                <div class="form-group border rounded text-white text-center skl-bg-color">
                    <a class="btn btn-lg btn-block text-white" asp-controller="Order" asp-action="Index">Операции с поръчки</a>
                </div>
                <div class="form-group border rounded text-white text-center skl-bg-color">
                    <a class="btn btn-lg btn-block text-white" asp-controller="ShoppingCart" asp-action="Index">Операции с продукти</a>
                </div>
                <div class="form-group border rounded text-white text-center skl-bg-color">
                    <a class="btn btn-lg btn-block text-white" asp-controller="Town" asp-action="Index">Операции с град</a>
                </div>
                <div class="form-group border rounded text-white text-center skl-bg-color">
                    <a class="btn btn-lg btn-block text-white" asp-controller="UseFullCategory" asp-action="Index">Операции с полезна категория</a>
                </div>
                <div class="form-group border rounded text-white text-center skl-bg-color">
                    <a class="btn btn-lg btn-block text-white" asp-controller="Company" asp-action="Index">Операции с компания</a>
                </div>
                <hr class="bg-white" />
            </form>
        </section>
    </div>
</div>
