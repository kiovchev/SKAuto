@model IList<string>;

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-white text-center">Създай Модел</h1>
<div class="row text-white justify-content-xl-center">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <hr class="bg-white" />
                <div class="form-group">
                    <label>Избери бранд</label>
                    <select class="form-control" id="brandName" name="brandName" type="text">
                        <option selected disabled>-- Избери бранд --</option>
                        @for (int i = 0; i < Model.Count(); i++)
                        {
                            <option>@Model.ToList()[i]</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label>Име на модел</label>
                    <input class="form-control" id="modelName" name="name" type="text" />
                </div>
                <div class="form-group">
                    <label>Година на производство от:</label>
                    <input type="number" min="1980" step="1" class="form-control" name="startYear" />
                </div>
                <div class="form-group">
                    <label>Година на производство до:</label>
                    <input type="number" min="1980" step="1" class="form-control" name="endYear" />
                </div>
                <div class="form-group">
                    <label>Адрес на снимка</label>
                    <input class="form-control" id="imageAddress" name="imageAddress" type="text" />
                    <label class="text-primary">Важно: Ако не подададете адрес ще създадете модел без снимка!</label>
                </div>
                <hr class="bg-white" />
                <div class="form-group text-center">
                    <button type="submit" class="btn skl-bg-color border">Запази</button>
                </div>
            </form>
        </section>
    </div>
</div>
