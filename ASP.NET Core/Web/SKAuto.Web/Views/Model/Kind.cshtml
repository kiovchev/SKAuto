@using SKAuto.Web.ViewModels.ViewModels.ModelViewModels;
@model IList<ModelsWithImage>;

@{
    ViewData["Title"] = "Kind";
}

<h2 class="text-white text-center skl-bg-color rounded m-2 p-1">Изберете модел автомобил</h2>

<table class="table-responsive">
    @{
       int i = 0;
    }
    @foreach (var product in @Model)
    {
        if (i % 5 == 0)
        {
            @:<tr>
            }
              @:<td class="text-center">
                <a class="text-white" href="/Category/ShowAll?modelName=@Model[i].Name"> 
                <img src="@Model[i].ModelImageAddress" height="175" width="220" />
                <label>@Model[i].Name</label>
                </a>
              @:</td>
            if ((i + 1) % 5 == 0)
            {
            @:</tr>
            }
        ++i;
    }
</table>

