@using SKAuto.Web.ViewModels.ViewModels.PartViewModels;
@model IList<PartIndexViewModel>;

@{
    int count = 0;
}

<h1 style="color:white">Операции с части</h1>

<div class="form-group border rounded text-white text-center skl-bg-color mt-5">
    <a class="btn btn-lg btn-block text-white" asp-controller="Part" asp-action="Create">Добави нова част</a>
</div>
<div class="table-responsive">
    @if (Model.Count() == 0)
    {
        <h3 class="text-danger ">В момента няма данни за части!!!</h3>
    }
    else
    {
        <table class="table text-center">
            <thead>
                <tr>
                    <th class="text-white skl-bg-color border" scope="col">#</th>
                    <th class="text-white skl-bg-color border" scope="col">Име на част</th>
                    <th class="text-white skl-bg-color border" scope="col">Марка и модел</th>
                    <th class="text-white skl-bg-color border" scope="col">Категория</th>
                    <th class="text-white skl-bg-color border" scope="col">Производител</th>
                    <th class="text-white skl-bg-color border" scope="col">Наличност</th>
                    <th class="text-white skl-bg-color border" scope="col">Цена за брой</th>
                    <th class="text-white skl-bg-color border" scope="col">Добави наличност</th>
                    <th class="text-white skl-bg-color border" scope="col">Промени/Изтрий</th>>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count(); i++)
                {
                    ++count;
                <tr class="text-center">
                    <td class="text-white skl-bg-color border align-middle" scope="col">@count</td>
                    <td class="text-white skl-bg-color border align-middle" id="partName" name="partName" scope="col">@Model[i].PartName</td>
                    <td class="text-white skl-bg-color border align-middle" id="brandAndModelName" name="brandAndModel" scope="col">@Model[i].BrandAndModelName</td>
                    <td class="text-white skl-bg-color border align-middle" id="categoryName" name="categoryName" scope="col">@Model[i].CategoryName</td>
                    <td class="text-white skl-bg-color border align-middle" id="manufactoryName" name="manufactoryName" scope="col">@Model[i].ManufactoryName</td>
                    <td class="text-white skl-bg-color border align-middle" id="quantity" name="quantity" scope="col">@Model[i].Quantity</td>
                    <td class="text-white skl-bg-color border align-middle" id="price" name="price" scope="col">@Model[i].IncomePrice</td>
                    <td class="text-white skl-bg-color border align-middle" scope="col">
                        <a class="btn bg-success border p-1 text-white" asp-controller="Part" asp-action="Add" asp-route-partId="@Model[i].PartId">Добави</a>
                    </td>
                    <td class="text-white skl-bg-color border align-middle" scope="col">
                        <a class="btn bg-dark border p-1 text-white" asp-controller="Part" asp-action="Update" asp-route-partId="@Model[i].PartId">Промени</a>
                        <a class="btn bg-danger border p-1 text-white" asp-controller="Part" asp-action="Delete" asp-route-partId="@Model[i].PartId">Изтрий</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
</div>
